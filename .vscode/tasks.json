{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_CXX_COMPILER=${env:LLVM_DIR}/bin/clang++",
                ".",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DLLVM_ENABLE_EH=ON"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["cmake"]
        }
    ]
}